<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/icon_regist"
    tools:context=".Regist">
    <EditText
        android:id="@+id/registuser"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="100dp"
        android:background="@color/white"
        android:hint="账号"
        />

    <EditText
        android:id="@+id/registsec"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="100dp"
        android:background="@color/white"
        android:hint="密码"
        />
    <EditText
        android:id="@+id/registemail"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="100dp"
        android:background="@color/white"
        android:hint="邮箱"
        />
    <EditText
        android:id="@+id/registsex"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="100dp"
        android:background="@color/white"
        android:hint="性别"
        />
    <EditText
        android:id="@+id/registtel"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="100dp"
        android:background="@color/white"
        android:hint="电话"
        />
    <TextView
        android:id="@+id/registnow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一键注册"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="148dp"
        />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="150dp"
        android:background="@mipmap/icon_regist_bottom" />
</LinearLayout>